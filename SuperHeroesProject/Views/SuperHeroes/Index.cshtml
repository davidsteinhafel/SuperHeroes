@model IEnumerable<SuperHeroesProject.Models.Hero>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alterEgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.primeAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.secondAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.catchphrase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alterEgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primeAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.secondAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catchphrase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
